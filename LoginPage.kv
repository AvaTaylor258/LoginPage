<LoginManager>:
    LoginPage:
        name: "login"
    WelcomePage:
        name: "welcome"

<LoginPage>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: ""
            size_hint: 1, .25
            id: invalid_creds_label
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Username"
                    size_hint: 1, .25
                    pos_hint: {"top": 0}
                Label:
                    text: "Password"
                    size_hint: 1, .25
                    pos_hint: {"top": 0}
            BoxLayout:
                orientation: "vertical"
                TextInput:
                    id: username
                TextInput:
                    id: password
                Button:
                    text: "Register New Account"
                    color: "red"
                Button:
                    text: "Enter"
                    onrelease: root.verify_creds(username.text, password.text)

<WelcomePage>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Welcome"
        Button:
            text: "Logout"

